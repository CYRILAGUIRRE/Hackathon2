{% extends 'base.html.twig' %}

{% block title %}Joueur{% endblock %}

{% block body %}
    <div class="showPlayer">
        <div class="identityShow">
            <h2>{{ players.lastname }} </h2>
            <h2> {{ players.firstname }}</h2>
        </div>
            <div><img class="showImg" src="{{ asset('upload_directory/' ~ players.photo) }}" alt=""></div>
        <div class="infoPlayers">
            <div>
                <h4>Age</h4>
                <p>{{ players.age }} ans</p>
            </div>
            <div>
                <h4>Taille</h4>
                <p>{{ players.height }} cm</p>
            </div>
            <div>
                <h4>Nationalité</h4>
                <p>{{ players.nationality }}</p>
            </div>
            <div>
                <h4>Poste préféré</h4>
                <p>{{ players.preferedRole }}</p>
            </div>
        </div>

                <h4>Actions</h4>
            <div class="actionPlayer">
            <button>
                <a href="{{ path('app_players_index') }}">Retour à la liste</a>
            </button>
            <button>
                <a href="{{ path('app_players_edit', {'id': players.id}) }}">Modifier</a>
            </button>
                {{ include('players/_delete_form.html.twig') }}
            </div>
    </div>
{% endblock %}
